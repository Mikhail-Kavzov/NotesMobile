<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesMobile.MainPage">

    <StackLayout>
        <StackLayout  Orientation="Horizontal">
            <Button Text="+">
            </Button>
            <Entry x:Name="tbSearch" TextChanged="OnEntryStartInput"></Entry>
        </StackLayout>
        <ListView x:Name="notesList"
              HasUnevenRows="True"
              ItemsSource="{Binding Notes}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <ViewCell.ContextActions>
                            <MenuItem Text="Вверх" Clicked="MoveTop" />
                            <MenuItem Text="Вниз" Clicked="MoveBottom" />
                            <MenuItem Text="Удалить" Clicked="Delete_Click"/>
                        </ViewCell.ContextActions>
                        <ViewCell.View>
                            <StackLayout>
                                <Label Text="{Binding Header}" FontSize="Large" />
                                <Label Text="{Binding Text}" />
                            </StackLayout>
                        </ViewCell.View>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
