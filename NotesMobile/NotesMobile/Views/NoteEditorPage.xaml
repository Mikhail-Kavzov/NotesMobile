<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesMobile.Views.NoteEditorPage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Button Text="Назад" Clicked="BackButton_Click"></Button>
            <Button Text="Save" Clicked="Save_Note_Click"></Button>
            <Label x:Name="labelHeader" Text="{Binding Source={x:Reference Name=entryHeader},Path=Text}" ></Label>
        </StackLayout>
        <Entry x:Name="entryHeader" Text="{Binding Header}" Placeholder="header..."></Entry>
        <Editor x:Name="editorText" Text="{Binding Text}" Placeholder="text..."></Editor>
    </StackLayout>
</ContentPage>
